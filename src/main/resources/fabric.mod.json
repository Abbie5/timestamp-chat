{
  "schemaVersion": 1,
  "id": "timestamp_chat",
  "version": "${version}",
  "name": "Timestamp Chat",
  "description": "Adds timestamps to chat.",
  "authors": [
    "Abbie"
  ],
  "contact": {
    "homepage": "https://github.com/peanutbutter144/timestamp-chat",
    "issues": "https://github.com/peanutbutter144/timestamp-chat/issues",
    "sources": "https://github.com/peanutbutter144/timestamp-chat"
  },
  "license": "MIT",
  "icon": "assets/timestamp_chat/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "cc.abbie.timestamp_chat.TimestampChatClient"
    ],
    "modmenu": [
      "cc.abbie.timestamp_chat.compat.ModMenuPlugin"
    ]
  },
  "mixins": [
    "timestamp_chat.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~${minecraft_version}",
    "java": ">=17",
    "cloth-config": ">=${cloth_config_version}"
  }
